<% layout('layouts/boilerPlate')%>
    <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST" class="container mt-2 needs-validation" novalidate enctype="multipart/form-data">
        <h1>Edit Campgrounds</h1>
        <div class="mb-3">
     <label class="form-label" for="title">Title</label>
     <input class="form-control" type="text" id="title" name="campground[title]" value="<%= campground.title%>" required>
     <div class="invalid-feedback">
      please Enter valid input
     </div>
     <div class="valid-feedback">
      Looks good
    </div>
        </div>
        <div class="mb-3">
     <label class="form-label" for="location">Location</label>
     <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location%>" required>
     <div class="valid-feedback">
      Looks good
    </div>
    <div class="invalid-feedback">
      please Enter valid input
     </div>
        </div>
        <!-- <div class="my-3">
          <input type="file" name="images" id="image" multiple>
          </div> -->
          <div class="mb-3">
            <label for="image" class="form-label">Add images</label>
            <input class="form-control" type="file" name="images" id="image" multiple>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label"></label>price
         <input class="form-control" type="number" id="image" name="campground[price]" value="<%= campground.price%>" required>
         <div class="valid-feedback">
            Looks good
          </div>
          <div class="invalid-feedback">
            please Enter Number
           </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label"></label>Description
         <textarea class="form-control" type="text" id="description" name="campground[description]" required><%= campground.description%></textarea>
         <div class="valid-feedback">
            Looks good
          </div>
          <div class="invalid-feedback">
            please Enter valid input
           </div>
        </div>
        <div class="mb-3">
          <label class="form-label">Current Images</label>
          <div class="d-flex flex-wrap">
              <% campground.images.forEach(img => { %>
                  <div class="position-relative m-2">
                      <img src="<%= img.url %>" alt="Campground Image" class="img-thumbnail" style="width: 150px; height: 100px;">
                      <label class="d-block text-center mt-1">
                          <input type="checkbox" name="deleteImages[]" value="<%= img.filename %>">
                          Delete
                      </label>
                  </div>
              <% }) %>
          </div>
      </div>
      
        <button class="btn btn-warning mb-3">update Campground</button>

    </form>
    <a class="btn btn-secondary mb-3" href="/campgrounds/<%= campground._id%>">Back to the Campground</a>

<script>
   'use strict'
  const forms = document.querySelectorAll('.needs-validation')
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }

      form.classList.add('was-validated')
    }, false)
  })
()
</script>